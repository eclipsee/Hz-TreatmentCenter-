/* pages/login/login.wxss */
.loginWrapper{
  height:100vh;
  width:100vw;
  /* background: #fff; */
  position: relative;
  box-sizing: border-box;
}
 .ball{
  height:10vh;
  width:10vh;
  position: absolute;
  top:100rpx;
  right:100rpx;
}
.titleImg{
  width:50vw;
  height:10vh;
  margin: 0 0 0 20vw ;
}
.titleImg image{
  width:50vw;
  height:8vh;
}
.loginBg{
  width:180px;
  height:100px;
  margin: 6vh 25vw 0;
}
.loginTitle{
  width:8vw;
  height:300rpx;
  font-size: 20px;
  margin: 10px 49vw;
  color:#7689b6;
  position: relative;
}
.loginTitle2{
  width:3vw;
  height:300rpx;
  font-size: 14px;
  margin: 0 49vw;
  color:#7689b6;
  position: absolute;
  top:80px;
  left:-211px;
}
.loginBtn{
  width:48vw;
  height:7vh;
  line-height: 6.5vh;
  border: 0.5px solid #7689b6;
  text-align: center;
  color:#7689b6;
  font-size: 36rpx;
  margin:300rpx auto 0;
  border-radius:7px;
  background: rgba(255, 255, 255, 0)
}

