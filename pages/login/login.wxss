}
@keyframes viewlinear {
  from {
    opacity: 1;
    transform:scale(1,1);
    background-color: rgb(171，221，230)
  }
  /*结束的角度*/
  to {
    opacity: 0;
    transform:scale(1.5,1.5);
    background-color: #fff;
  } 
}
@keyframes viewImg {
  from {
    transform:rotate(0);
  }
  /*结束的角度*/
  to {
    transform:rotate(360deg);
  } 
}

