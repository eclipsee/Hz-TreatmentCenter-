
@import "../../wxParse/wxParse.wxss";
.learning-wrapper {
  width: 100%;
  padding-bottom: 110rpx;
}
.learning-wrapper .video-area {
  width: 100%;
  height: 422rpx;
}
.learning-wrapper .audio-wrapper {
  height: 672rpx;
  background: linear-gradient(to bottom, #ffffff, #f0f2f5);
  padding: 40rpx 60rpx;
  box-sizing: border-box;
}
.learning-wrapper .audio-wrapper .audio-img-wrapper {
  position: relative;
}
.learning-wrapper .audio-wrapper .audio-img-wrapper .audio-img-bg {
  margin: 0 auto;
  width: 540rpx;
  height: 300rpx;
  display: block;
}
.learning-wrapper .audio-wrapper .audio-img-wrapper .audio-img {
  position: absolute;
  width: 300rpx;
  height: 300rpx;
  top: 0;
  left: 166rpx;
}
.learning-wrapper .audio-wrapper .progress-wrapper {
  margin-top: 68rpx;
}
.learning-wrapper .audio-wrapper .progress-wrapper .progress {
  position: relative;
}
.learning-wrapper .audio-wrapper .progress-wrapper .progress .progress-bg {
  width: 100%;
  background-color: rgba(0, 0, 0, 0.1);
  height: 4rpx;
  position: absolute;
}
.learning-wrapper .audio-wrapper .progress-wrapper .progress .progress-control {
  position: absolute;
}
.learning-wrapper .audio-wrapper .progress-wrapper .progress .progress-control .progress-bar {
  width: 100rpx;
  height: 4rpx;
  background-color: #f86442;
  display: inline-block;
  vertical-align: top;
}
.learning-wrapper .audio-wrapper .progress-wrapper .progress .progress-control .progress-pointer {
  width: 24rpx;
  height: 24rpx;
  border-radius: 100%;
  background: radial-gradient(#ff8b6d, #f86442);
  position: absolute;
  top: -10rpx;
  display: inline-block;
}
.learning-wrapper .audio-wrapper .progress-wrapper .time {
  margin-top: 16rpx;
  font-size: 28rpx;
  position: relative;
  top: 16rpx;
}
.learning-wrapper .audio-wrapper .progress-wrapper .time text:nth-child(1) {
  color: #f86442;
}
.learning-wrapper .audio-wrapper .progress-wrapper .time text:nth-child(2) {
  position: absolute;
  right: 0;
  color: #999999;
}
.learning-wrapper .audio-wrapper .audio-player-btn {
  width: 160rpx;
  height: 160rpx;
  margin: 16rpx auto 0;
  display: block;
}
.learning-wrapper .content-master {
  background-color: #f0f2f5;
}
.learning-wrapper .content-master .content-wrapper {
  width: 100%;
  padding: 60rpx;
  box-sizing: border-box;
  border-radius: 24rpx 24rpx 0 0;
  background-color: #fff;
}
.learning-wrapper .content-master .content-wrapper .content-desc {
  font-size: 40rpx;
  line-height: 58rpx;
  word-break: break-all;
  font-weight: 500;
}
.learning-wrapper .content-master .content-wrapper .content {
  margin-top: 40rpx;
  width: 100%;
  min-height: 300rpx;
  border-top: 2rpx solid #ededed;
  border-bottom: 2rpx solid #ededed;
  padding: 40rpx 0;
  box-sizing: border-box;
}
.learning-wrapper .content-master .content-wrapper .content .title {
  font-size: 32rpx;
  color: #333333;
  display: block;
}
.learning-wrapper .content-master .content-wrapper .content .t-content {
  font-size: 32rpx;
  line-height: 50rpx;
  color: #444444;
}
.learning-wrapper .content-master .content-wrapper .report-btn {
  font-size: 28rpx;
  color: #999999;
  margin-top: 30rpx;
  display: inline-block;
}
