/**index.wxss**/
view{
  box-sizing: content-box;
}
.todayContainer{
  width:100%;
  height:100%;
  max-width: 100%;
  min-height: 100%;
  box-sizing:border-box;
}
.wraper{
  width:100%;
  max-width: 100%;
  min-height: 100%;
  padding-bottom: 20rpx;
  background: #F0F2F5;
  position: relative;
}
.wrapperNo{
  background: #fff;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.topTxt{
  box-sizing: border-box;
  width:100%;
  height: 150rpx;
  padding-left: 48rpx;
  padding-right: 48rpx;
  padding-top: 44rpx;
  background:linear-gradient(#FFFFFF,#F0F2F5)
}
.todayTitle{
  font-size: 48rpx;
  color:#333333;
  font-weight: 500rpx;
}
.dateTxt{
  font-size: 24rpx;
  color:#999999;
}
.lesson{
  width:702rpx;
  margin: -155rpx auto 0;
  padding-bottom: 40rpx;
}
.lessonItem{
  width:642rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 10rpx 30rpx 0 rgba(175,183,200,.2);
  margin-top:-154rpx;
  padding: 0 30rpx 40rpx;
}
.lessonHead{
  width:642rpx;
  height:110rpx;
  margin: 0 auto;
  padding: 30rpx 0 34rpx ;
  border-bottom: 1rpx solid #EDEDED;
  margin-bottom: 40rpx;
}
.headImg{
  display:inline-block;
  box-sizing: border-box;
  width:160rpx;
  height:160rpx;
  border-radius:8rpx;
  /* border:1rpx solid #EBEBEB; */
  margin-left:30rpx;
  position: relative;
}
.lessonWrapper{
  padding-top:32rpx;
}

.headTitle{
  box-sizing: border-box;
  display:inline-block;
  width:488rpx;
  height:135rpx;
  margin-left: 186rpx;
}
.headTitle .headTitleTxt{
  font-family: PingFangSC;
  color:#333333;
  font-size: 30rpx;
  height: 66rpx;
  overflow: hidden;
  font-weight: 500;
  line-height: 42rpx;
}
.headTitle .headTitleTxt text{
  display: block;
  width:440rpx;
  overflow: hidden;
white-space: nowrap;
text-overflow:ellipsis;
} 

.headTitle .commen{
  width:105rpx;
  height: 39rpx;
  line-height: 42rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-top: 4rpx;
}
.headTitle .notCheckin{
  border: .5rpx solid #F86442;
  color:#F86442;
}

.headTitle .doneCheckin{
  border: .5rpx solid #999999;
  color: #999999;
}

.lessonTip{
  width:100%;
  height:40rpx;
}
.lessonTip .icon-completed-left{
  width:28rpx;
  height:28rpx;
  position: relative;
  top:8rpx;
}
.lessonTip .icon-completed-right{
  width:40rpx;
  height:40rpx;
}
.lessonTip .lesstipTxt{
  font-family: PingFangSC-Regular;
  color:#333333;
  font-size: 28rpx;
  margin-left: 22rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  max-width: 510rpx;
}
.tipView{
  width:28rpx;
  height:60rpx;
  margin-top: 10rpx;
}
.none{
  display:none;
}
.nolesson{
  box-sizing: border-box;
  width:100%;
  height: 362rpx;
  padding-top: 272rpx;
  text-align: center;
}
.nolessonImg{
  display: block;
  width:300rpx;
  height:300rpx;
  margin: 0 auto;
}
.nolessonTxt{
  color:#999999;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
}
.toAllLesson{
  width:276rpx;
height:80rpx;
margin:40rpx 237rpx 0;
background:rgba(248,100,66,1);
border-radius:60rpx;
font-size:28rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(255,255,255,1);
text-align: center;
padding-top: 20rpx;
box-sizing: border-box;
}
.lessonBottomWrapper{
  width:702rpx;
  /* height:130rpx; */
  margin: 0 auto;
  padding: 30rpx 0 34rpx;
  margin-bottom: 40rpx;
}
.lessonBottom{
  height:130rpx;
  margin: 0 auto 10rpx;
  padding: 30rpx 30rpx 34rpx ;
  border-bottom: 1rpx solid #EDEDED;
  border-radius: 16rpx;
  margin-top: 40rpx;
  background-color: #fff;
}
.headShortTxt{
  font-family: PingFangSC;
  color:#666666;
  font-size: 28rpx;
  height: 86rpx;
  overflow: hidden;
  font-weight: 500;
  line-height: 42rpx;
}
.headImgShadow{
  display:inline-block;
  box-sizing: border-box;
  width: 160rpx;
  height: 160rpx;
  border-radius:8rpx;
  /* border:1rpx solid #EBEBEB; */
  /* margin-left:30rpx; */
  position: absolute;
  top:0;
  left:0;
}

