page {
  background-image: url('http://fdfs.xmcdn.com/group62/M04/21/FE/wKgMZ10GDg-BGUNVAABfU42zDSA373.png');
}
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
.bubble-receive {
  padding: 0 40rpx;
  position: relative;
}
.bubble-receive .loading {
  margin-top: 300rpx;
  text-align: center;
  font-size: 28rpx;
  color: #343c50;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bubble-receive .loading .icon {
  width: 50rpx;
  height: 50rpx;
}
.bubble-receive .bubble-info {
  display: flex;
  flex-direction: row-reverse;
  opacity: 1;
  animation: fadeIn 0.3s linear;
}
.bubble-receive .bubble-info .bubble-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 32rpx;
  color: #343c50;
  font-style: italic;
}
.bubble-receive .bubble-info .bubble-wrap .bubble {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  margin-top: 60rpx;
}
.bubble-receive .user {
  display: flex;
  margin-top: 200rpx;
  flex-direction: column;
  font-size: 30rpx;
  color: #343c50;
  opacity: 1;
  animation: fadeIn 0.3s linear;
}
.bubble-receive .user .info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.bubble-receive .user .info .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.bubble-receive .user .star-wrap {
  margin: 10rpx 0;
}
.bubble-receive .user .replies {
  margin-top: 50rpx;
  font-size: 26rpx;
  color: #7689B6;
}
.bubble-receive .bottom-btns {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 60rpx;
  display: flex;
  justify-content: space-between;
}
.bubble-receive .bottom-btns .btn-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}
.bubble-receive .bottom-btns .btn-wrap .icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}
