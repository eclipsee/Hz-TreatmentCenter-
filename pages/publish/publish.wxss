/* pages/publish/publish.wxss */
.wrapper{
  width:100vw;
  height: 100vh;
  /* background: #fff; */
  background: rgba(220,234,240,1);
  position: relative;
}
.timeModule{
  box-sizing: border-box;
  width:100vw;
  height: 50vh;
  position: relative;
  padding-top: 200rpx;
}
.timeWrapper{
   width:70vw;
  height:44vw;
  margin: 0 15vw;
  background: rgba(220,234,240,1);
  /* background: #fff; */
  border-radius: 28rpx;
}
.timeTxt{
  width:100%;
  text-align: center;
  font-size: 24px;
  /* color:#dedede; */
  color:#7689b6;
  margin-bottom: 50rpx;
}
.timeTxt2{
  width:100%;
  text-align: center;
  font-size: 18px;
  /* color:#dedede; */
  color:#869fdb;
}

.timeModule .cloud1{
  width:16vw;
  height:8.67vw;
  position: absolute;
  top:40rpx;
  right:75rpx;
}
.timeModule .cloud2{
  width:16vw;
  height:8.67vw;
  position: absolute;
  top:105rpx;
  left:45rpx;
}
.moodContent{
  width:100%;
}
.moodTitle{
  width:642rpx;
  text-align: center;
  height:64rpx;
  margin: 0 auto;
}
.moodTitle image{
  width:130rpx;
  height:62rpx;
  float: left;
  margin-right: 10rpx;
}
.moodTitle input{
  width:480rpx;
  height:64rpx;
  float: left;
  border-bottom: 1px solid #7689b6;
  color:#7689b6;
  font-size:20px;
}
.moodTitle2{
  width:642rpx;
  text-align: center;
  height:64rpx;
  margin: 40rpx  0 0 50rpx;
}
.moodTitle2 image{
  width:192rpx;
  height:62rpx;
  float: left;
  margin-right: 10rpx;
}
.moodChoose{
  box-sizing: border-box;
  width:100vw;
  height: 50vh;
  position: absolute;
  bottom: 0;
  background: #fff;
  /* background:rgba(220,234,240,1); */
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  padding-top: 5vh;
}
.moodlist{
  width:100vw;
  height: 15vh;
  display: flex;
  justify-content: space-around;
}
.moodlist:nth-child(2){
  margin-top: 6vh
}
.moodItem{
  width:24vw;
  height:100%;
}
.moodItem:active image{
   width:26vw;
  height:26vw;
  position: relative;
  top:-1vw;
  left:-1vw;
}
.moodItem image{
  width:24vw;
  height:24vw;
}
.moodItemTxt{
  width:100%;
  text-align: center;
  font-size: 14px;
  color: #666;
}