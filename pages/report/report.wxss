.report{
  background: #F0F2F5;
  height: 100%;
  font-size: 32rpx;
}
.choose{
  /*display: none;*/
}
.choose .ul{
  background: #fff;
  padding: 0 30rpx;
}
.choose .li{
  width: 100%;
  line-height: 120rpx;
  color: #333;
  border-bottom: 0.5rpx solid #ededed;
  font-size: 32rpx;
  display: flex;
  align-items:center;
  position: relative;
}
.title{
  color: #999;
  background: #F0F2F5;
  border-bottom: none;
  font-size:28rpx;
  line-height: 120rpx;
  padding: 0 30rpx;
}
.choose .li image{
  width: 14rpx;
  height: 24rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}
.edit-other,.feedback{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: #F0F2F5;
  z-index: 2;
}
.edit-other textarea{
  width: 690rpx;
  height: 409rpx;
  margin: 0 auto;
  background: #fff;
  border: 0.5rpx solid #ccc;
  border-radius: 6rpx;
  padding: 20rpx;
  font-size: 32rpx;
}
.btn{
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #ccc;
  color: #fff;
  border-radius: 60rpx;
  margin: 50rpx auto 0;
  text-align: center;
}
.able{
  background: #F86442;
}
.feedback{
  z-index: 3;
  color: #666;
  font-size: 30rpx;
  text-align: center;
  padding-top: 29%;
}
.feedback image{
  width: 190rpx;
  height: 190rpx;
  margin: 0 auto;
}
.feedback .result{
  font-size: 35rpx;
  color:#333;
  margin: 20rpx 0;
}
.feedback .btn{
  background: #F86442;
}

