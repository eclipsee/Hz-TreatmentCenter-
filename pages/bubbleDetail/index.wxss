.bubble-detail .bottom-replies {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 5;
}
.bubble-detail .bottom-replies .btns-wrap {
  padding: 20rpx 40rpx 10rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
}
.bubble-detail .bottom-replies .btns-wrap .close,
.bubble-detail .bottom-replies .btns-wrap .more {
  position: absolute;
  top: 40rpx;
}
.bubble-detail .bottom-replies .btns-wrap .close .icon,
.bubble-detail .bottom-replies .btns-wrap .more .icon {
  width: 40rpx;
  height: 40rpx;
}
.bubble-detail .bottom-replies .btns-wrap .close {
  left: 20rpx;
}
.bubble-detail .bottom-replies .btns-wrap .more {
  right: 20rpx;
}
.bubble-detail .bottom-replies .btns-wrap .btns {
  display: flex;
  justify-content: space-around;
  width: 630rpx;
}
.bubble-detail .bottom-replies .btns-wrap .btns .btn {
  font-size: 24rpx;
  color: #7689B6;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  color: #7689b6;
}
.bubble-detail .bottom-replies .btns-wrap .btns .btn.active {
  color: #000;
}
.bubble-detail .bottom-replies .btns-wrap .btns .btn .icon {
  width: 60rpx;
  height: 60rpx;
}
.bubble-detail .reply-content {
  background-color: #fff;
  padding: 10rpx 20rpx;
  height: 0;
  transition: height 0.3s;
}
