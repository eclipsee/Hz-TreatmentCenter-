.list-wrap{
  background: #Fff;
  height: 100%;
  color: #333;
}
.list-wrap .lesson{
  border-bottom: 0.5rpx solid #ededed;
  padding: 40rpx 30rpx;
}
.list-wrap .lesson image{
  width: 130rpx;
  height: 130rpx;
}
.lesson .les-info{
  float: right;
  width: 530rpx;
}
.lesson .les-info .title{
  font-size: 32rpx;
  min-height: 98rpx;
}
.lesson .les-info .join-time{
  color: #999;
  font-size: 28rpx;
  float: right;
}
.disable{
  opacity: 0.3;
}
.no-task{
  text-align: center;
  margin-top: 150rpx;
}
.no-task image{
  width: 300rpx;
  height: 300rpx;
}
.no-task .img{
  width: 100%;
  height: 300rpx;
  margin: 10rpx auto;
}
.no-task .txt{
    display: block;
    color: #999;
    font-size: 30rpx;
}
.list-wrap .toast{
  text-align:center;
  color:#999;
  font-size:28rpx;
  background:#fff;
  padding:25rpx 0;
}
.headImgShadow{
  display:inline-block;
  box-sizing: border-box;
  width: 130rpx;
  height: 130rpx;
  border-radius:8rpx;
  /* border:1rpx solid #EBEBEB; */
  /* margin-left:30rpx; */
  position: absolute;
  top:0;
  left:0;
}