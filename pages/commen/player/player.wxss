/* pages/commen/player/player.wxss */
.playeWrapper{
  position: fixed;
  bottom: 170rpx;
  width: 112rpx;
  height:112rpx;
  border-radius: 100%;
  right: 14rpx;
}
.playerCover,.playerMaster{
  width: 100%;
  height: 100%;
  border-radius: 100%;
  position: absolute;
  top: 0;
}
.playerMaster{
  background-color: rgba(0,0,0,0.4);
  border: 7rpx solid #fff;
  box-sizing: border-box;
  box-shadow: 0 0 2rpx 5rpx #d7d7d7;
}
.player-play-icon,
.player-pause-icon{
  height: 38rpx;
  width: 46rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -23rpx;
  margin-top: -19rpx;
}

.player-state-0 .player-play-icon,.player-state-2 .player-play-icon{
  display: none;
}
.player-state-0 .player-pause-icon,.player-state-2 .player-pause-icon{
  display: block;
}
.player-state-1 .player-play-icon{
  display: block;
} 
.player-state-1 .player-pause-icon{
  display: none;
} 
.player-state-1 .playerCover{
  animation:change 6s linear infinite;
}

@keyframes change{
  0%{
    transform: rotate(0)
  }
  50%{
    transform: rotate(180deg)
  }
  100%{
    transform: rotate(360deg)
  }
}