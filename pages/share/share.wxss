.contact-mask{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.7);
	z-index: 20;
}
.contact-mask .wrap{
	width: 520rpx;
	/*height: 200rpx;*/
	position: absolute;
	top: 40%;
	left: 50%;
	transform: translate(-50%,-50%);
	background: #fff;
	border-radius: 7rpx;
  box-sizing: border-box;
}
.contact-mask .wrap .txt{
	padding:50rpx 50rpx 0;
	text-align:center;
	font-size:30rpx;
