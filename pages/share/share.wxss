	position: relative;
	border-top: 1rpx solid #e8e8e8;
	/*height: 70rpx;*/
}
.contact-mask .wrap .btn view{
	display: inline-block;
	width: 49%;
	font-size: 36rpx;
	text-align: center;
	line-height: 100rpx;
  color:#F86442;
}
.contact-mask .wrap .btn .close{
  color: #333;
	border-right: 1rpx solid #e8e8e8;
}
.contact-mask .wrap button{
	position: absolute;
  width: 50%;
	top: 0;
	right: 0;
	opacity: 0;
}

