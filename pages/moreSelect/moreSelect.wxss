/* pages/moreSelect.wxss */
.moreSelectWrapper{
  width:100%;
  padding-bottom: 50rpx;
}
.fl{
  float: left;
}
.productWrapper{
  margin-top: -100rpx;
  width:100%;
}
productNoWrapper{
   width:100%;
   height:100%;
}
.productAnswer{
  box-sizing: content-box;
  width:690rpx;
  margin: 0 auto;
  margin-bottom: 40rpx;
  background-color: #fff;
  box-shadow:0rpx 10rpx 30rpx 0rpx rgba(175,183,200,0.2);
  border-radius:12rpx;
  position: relative;
  z-index:100;
  padding-bottom: 60rpx;

}
.titleImg{
  width:750rpx;
  height:300rpx;
}
.analysis-answer {
  padding: 30rpx;
}
.detail-title {
  font-size: 28rpx;
  font-weight: bold;
  display: inline-block!important;
}
 .analysis-answer .detail-titleEssence{
   position: absolute;
  top:0rpx;
  right:-80rpx;
   display: inline-block!important;
   width:75rpx;
   height:40rpx;
   text-align: center;
   line-height: 40rpx;
   background:linear-gradient(297deg,rgba(252,208,119,1) 0%,rgba(248,100,66,1) 100%);
  border-radius:22rpx;
  color:#fff;
  font-size: 22rpx;
  /* margin-left: 12rpx; */
}
.commentTitle{
  height:90rpx;
  margin-bottom: 24rpx;
}
.commentHeadImg{
  width:90rpx;
  height:90rpx;
  border-radius:45rpx;
  /* display: inline-block; */
}
.commentNickname{
  color:#4D423D;
  display: inline-block;
  font-size: 28rpx;
  font-weight: 500;
  margin-left: 20rpx;
  position:relative;
}
.commentHeadTop{
  height:90rpx;
  /* display: inline-block; */
}
.checkinTxt{
  font-size: 26rpx;
  color:#999;
  margin-left:20rpx;
}

.analysis-comment{
  box-sizing: border-box;
  background:#FFF7F0;
  padding: 30rpx;
  border:0.5rpx solid #F6D8B9;
  border-radius:6rpx;
  position: relative;
  width:650rpx;
  margin: 0 auto;
  margin-top:30rpx;
}
.analysis-comment .trangle{
  position: absolute;
  top:-10rpx;
  left:45rpx;
  width:16rpx;
  height:16rpx;
  transform:rotate(45deg);
  background:#FFF7F0;
  border-top:0.5px solid #F6D8B9;
  border-left:0.5px solid #F6D8B9;
}
.analysis-comment .spreadContent{
  /* height:600rpx;
  overflow: hidden; */
}

.analysis-comment .commentHeadImg{
  width:65rpx;
  height:65rpx;
  border-radius:33rpx;
  display: inline-block;
}
.analysis-comment .commentNickname{
  color:#4D423D;
  display: inline-block;
  font-size: 28rpx;
  font-weight: 500;
  margin-left: 20rpx;
  position:relative;
  top:-22rpx;
}
.question-title {
  font-size: 32rpx;
  line-height: 42rpx;
  color: #333333;
  margin-bottom: 40rpx;
}
.answerItem{
  display: inline-block;
  width:200rpx;
  height:200rpx;
  /* background-color: bisque; */
  position: relative;
  margin:30rpx 8rpx 0 0;
  overflow: hidden;
}
.answerItem .answer-image{
  width:200rpx;
  height:200rpx;
}
.videoItem{
display: inline-block;
  width:200rpx;
  height:200rpx;
  /* background-color: bisque; */
  margin:30rpx 8rpx 0 0;
}
.answer-video{
  width:200rpx;
  height:200rpx;
}
.videoImg{
  width:200rpx;
  height:200rpx;
}
.videoPreview{
  width:200rpx;
  height:200rpx;
}
.audioItem{
  width:300rpx;
  height: 100rpx;
  margin:30rpx 0;
}
.to-get-all {
  margin: 30rpx auto 0;
  width: 180rpx;
}
 .to-get-all image{
  vertical-align: middle;
}
.to-get-all .less{
  transform: rotate(180deg);
}
.to-get-all image {
  display: inline-block;
  margin-left: 16rpx;
  width: 20rpx;
  height: 12rpx;
}
.to-get-all .to-get-all-Txt{
  display: inline-block!important;
  font-size: 26rpx;
  color: #999999;
  vertical-align: middle;
  margin-left:25rpx;
}
.nolesson{
  box-sizing: border-box;
  width:100%;
  height: 362rpx;
  text-align: center;
}
.nolessonImg{
  display: block;
  width:300rpx;
  height:300rpx;
  margin: 0 auto;
}
.nolessonTxt{
  color:#999999;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
}

