            </view> -->
          </view>
      </view>
  </scroll-view>
  <view wx:if='{{pagetype != "1"}}'  class='{{isIphoneX ? "signInBtnWraperPx" : "signInBtnWraper"}}'> 
      <button  wx:if='{{actionType == 2 && status == "active"}}'  class='signInBtn' bindtap='toLessonDetail'>开始学习</button>
      <button  wx:if='{{actionType == 3 && status == "active"}}'  class='signInBtn' bindtap='bindTapGroup'>绑定此群</button>
  <form bind:submit="testSubmit" report-submit="true">
    <view  wx:if='{{status == "active" && actionType == 1}}' class='{{isIphoneX ? "aaPx" : "aa"}}'>
      <button  formType="submit"   wx:if='{{status == "active" && actionType == 1}}'>
        <form  bind:submit="testSubmit" report-submit="true">
          <button  wx:if='{{status == "active" && actionType == 1}}' open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" >
            <view  class='{{isIphoneX ? "aaPx" : "aa"}}'>免费报名
            </view>
          </button>
        </form>
      </button>
    </view>
  </form>
      <button  wx:if='{{status == "inactive"}}'  class='signInBtnInactive'>课程已下架</button>
      <button  wx:if='{{status == "expired"}}'  class='signInBtnInactive'>课程已结束</button>
</view>
</view>
