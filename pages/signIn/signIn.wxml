<import src="../../wxParse/wxParse.wxml"/>
<view class='containerSign'  style='padding-top:{{navHeight}}px'>
  <view class='navBar'>
      <navbar page-name="课程报名"></navbar>
  </view>
  <scroll-view class='{{pagetype == "1" ? "wraper1" :"wraper"}} {{pagetype == "1" && (isIphoneX ? "heightPx" : "heightFull") || (isIphoneX ? "height11" : "height22")}} ' scroll-y="true">
      <view class='lessonAlbum'>
        <view class='albumWraper'>
            <image class='albumBg' src='../../images/audio-bg.png'></image>
            <image class='albumImg' src='{{coverUrl}}' ></image>
        </view>
        <view class='albumTitle'>{{title}}</view>
        <view class='albumSubtitle'>{{shortDesc}}</view>
      </view>
      <view class='{{isIphoneX ? "lessonIntroPx" : "lessonIntro"}}'>
        <view class='introTitle'>
          <view class='leftLine fl'></view>
          <view class='titleTxt fl'>课程介绍</view>
          <view  class='rightLine fl'></view>
        </view>
         <view class='htmlWrapper'>
            <template is="wxParse" data="{{wxParseData:article.nodes}}"/>
