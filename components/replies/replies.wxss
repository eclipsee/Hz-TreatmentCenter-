.comment-audio {
  display: flex;
  align-items: center;
  padding: 15px 20px;
}
.comment-audio .user-info {
  display: flex;
  flex-direction: column;
}
.comment-audio .user-info .avatar {
  width: 40px;
  height: 40px;
  margin-bottom: 6px;
  border-radius: 100%;
}
.comment-audio .user-info .name {
  font-size: 12px;
  color: #666;
}
.comment-audio .bubble-wrap {
  margin-top: -20px;
  margin-left: 20px;
}
.comment-audio.right {
  flex-direction: row-reverse;
}
.comment-audio.right .bubble-wrap {
  margin-right: 20px;
}
