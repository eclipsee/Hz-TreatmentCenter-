/* components/bubble/bubbleBrief.wxss */
.bubble-brief {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #eee;
}

.bubble-brief .bubble-title {
  margin-left: 20rpx;
  margin-top: -20rpx;
  font-size: 28rpx;
  color: #666;
}

.bubble-brief .user-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.bubble-brief .user-info .avatar {
  margin-bottom: 10rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}

.bubble-brief .bubble-wrap {
  flex-grow: 1;
  text-align: right;
}