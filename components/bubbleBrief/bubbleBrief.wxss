/* components/bubble/bubbleBrief.wxss */
.bubble-brief {
  padding-top: 15px;
  padding-bottom: 15px;
  margin-left: 20px;
  margin-right: 20px;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.bubble-brief .bubble-title {
  margin-left: 10px;
  margin-top: -10px;
  font-size: 14px;
  color: #666;
}

.bubble-brief .user-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 12px;
  color: #666;
}

.bubble-brief .user-info .avatar {
  margin-bottom: 5px;
  width: 40px;
  height: 40px;
  border-radius: 100%;
}

.bubble-brief .bubble-wrap {
  flex-grow: 1;
  text-align: right;
}