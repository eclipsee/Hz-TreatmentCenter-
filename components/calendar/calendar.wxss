/* components/calendar.wxss */
.calendar{
  width: 100%;
  padding-top: 42rpx;
}
.calendar-month{
  color: #333;
  font-size: 36rpx;
  padding:0 30rpx;
  font-weight: 500;
}
.doneIcon{
  display: inline-block;
  width:12rpx;
  height:12rpx;
  border-radius: 6rpx;
  background: #F86442;
  margin-left: 268rpx;
}
.doneText{
  display: inline-block;
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  margin-left: 15rpx;
}
.replaceIcon{
  display: inline-block;
  width:12rpx;
  height:12rpx;
  border-radius: 6rpx;
  background: #FFD743;
  margin-left: 20rpx;
}
.replaceText{
  display: inline-block;
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  margin-left: 15rpx;
}
.calendar-date{
  color: #999;
  font-size: 24rpx;
  padding:0 30rpx;
  margin-top: 20rpx;
}
.calendar .calendar-title{
  width: 100%;
  display:flex;
  font-size: 24rpx;
  color: #ccc;
  text-align: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ededed;
  margin-top: 40rpx;
}

.calendar .calendar-title text{
  flex:1;
}

.calendar-content{
  width: 100%;
  height: 150rpx;
  position: relative;
  top: 0;
  left:0;
}
.month-item{
  width:100%;
  /*display: flex;*/
}
.month-days{
  /*width: 100%;*/
  display: flex;
  
}

.month-days .days-item{
  /*width: 107rpx;*/
  flex: 1;
  display: inline-block;
  text-align: center;
  margin-top: 30rpx;
  position: relative;
  
}
.month-days .days-item .day{
  display: inline-block;
  font-size: 30rpx;
  color: #ccc;
  text-align: center;
  width: 70rpx;
  height: 70rpx;
  line-height:25rpx;
  border-radius: 100%;
  position: relative;
}
.month-days .days-item .replaceTop{
  width:28rpx;
  height:28rpx;
  position: absolute;
  top:0rpx;
  right:10rpx;
}
.month-days .days-item .hasClass{
  color: #333;
  background:rgba(249,250,251,1);
  font-weight: 500;
}
.month-days .days-item .noClass{
color: #ccc!important;
background:#fff!important;
  font-weight: 400!important;
}
.month-days .days-item .achieve{
  background: rgba(248, 100, 66, 0.2);
  color: #F86442;
  font-weight: 500;
}
.month-days .days-item .replace{
  background: #FFD743;
  color: #fff;
  font-weight: 500;
}
.month-days .days-item .checked{
  display: inline-block;
  width: 32rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #F86442;
  position: absolute;
  left: 50%;
  bottom: -20rpx;
  transform: translateX(-50%);
}
