/* components/record/record.wxss */

.recordWrapper{
  width:150rpx;
  height:150rpx;
  margin: 0 auto;
  margin-top:90rpx;
  position: relative;
}
.record{
  width:150rpx;
  height:150rpx;
  margin: 0 auto;
  border-radius: 75rpx;
  position: relative;
}
.record .recordBg{
  width:150rpx;
  height:150rpx;
  position: absolute;
  top:0;
  left:0;
  z-index:1
}
.record .recordIcon{
  width:50rpx;
  height:50rpx;
  position: absolute;
  top:50rpx;
  left:50rpx;
  z-index:2
}
.recordWrapper .restart{
  width:50rpx;
  height:50rpx;
  line-height: 50rpx;
  position: absolute;
  top:50rpx;
  left:-123rpx;
  font-size: 16rpx;
  text-align: center;
}
.recordWrapper .send{
  width:50rpx;
  height:50rpx;
  line-height: 50rpx;
  position: absolute;
  top:50rpx;
  left:223rpx;
  font-size: 16rpx;
  text-align: center;
}
.recordTime{
  font-size: 32rpx;
  color:#7689b6;
  text-align: center;
  margin-top: 20rpx;
}