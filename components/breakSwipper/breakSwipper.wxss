/* components/calendar.wxss */
.calendar{
  width: 100%;
  padding-top: 42rpx;
}
.title{
  display:inline-block;
  color: #333;
  font-size: 36rpx;
  padding:0 10rpx 0 30rpx;
  font-weight: 500;
}
.allNum{
  display:inline-block;
  color: #333;
  font-size: 28rpx;
}
.toBreakList{
  display:inline-block;
  color: #333;
  font-size: 28rpx;
  margin-left: 280rpx;
}
.toIcon{
 display:inline-block;
  width:20rpx;
  height:20rpx;
}
.doneIcon{
  display: inline-block;
  width:12rpx;
  height:12rpx;
  border-radius: 6rpx;
  background: #F86442;
  margin-left: 268rpx;
}
.doneText{
  display: inline-block;
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  margin-left: 15rpx;
}
.replaceIcon{
  display: inline-block;
  width:12rpx;
  height:12rpx;
  border-radius: 6rpx;
  background: #FFD743;
  margin-left: 20rpx;
}
.replaceText{
  display: inline-block;
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  margin-left: 15rpx;
}
.calendar-date{
  color: #999;
  font-size: 24rpx;
  padding:0 30rpx;
  margin-top: 20rpx;
}
.calendar .calendar-title{
  width: 100%;
  display:flex;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ededed;
  margin-top: 40rpx;
}
.calendar .calendar-title text{
  flex:1;
}

.scroll_box{
width: 100%;
height: 250rpx;
overflow: hidden;
background: #fff;
white-space: nowrap;
margin-top:42rpx;
}
.scroll-view_x{
  height: 250rpx;
}
.item_list{
  display: inline-block;
  vertical-align:top;
  font-size: 30rpx;
  color: #ccc;
  text-align: center;
  width:518rpx;
  height: 204rpx;
  background:rgba(255,255,255,1);
  /* box-shadow:0px 8rpx 30rpx 0px rgba(0,0,0,0.1); */
  box-shadow:0px 10rpx 20rpx 0px rgba(0,0,0,0.1);
  border-radius:12rpx;
  margin-right: 25rpx;
  position:relative;
  top:12rpx;
  overflow: hidden;
}
.breakIndex{
  width:152rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  background:rgba(255,248,246,1);
  border-radius:30rpx;
  font-size:28rpx;
  color:rgba(248,100,66,1);
  margin:30rpx 0 0 30rpx;
}
.hasDoneIcon{
  position: absolute;
  right:15rpx;
  top:15rpx;
  width:90rpx;
  height:90rpx;
}
.lockIcon{
  position: absolute;
  right:30rpx;
  top:40rpx;
  width:40rpx;
  height:40rpx;
}
.bottomDone{
  position: absolute;
  bottom:0;
  width:100%;
  height:8rpx;
background:rgba(248,100,66,1);
/* border-bottom-left-radius: 12rpx;
border-bottom-right-radius: 12rpx; */
}
.lessonTitle{
  margin-top:30rpx;
  font-size:32rpx;
  color:rgba(51,51,51,1);
  text-align: left;
  padding-left: 30rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap; 
}
.lessonTitleNo{
  margin-top:30rpx;
  font-size:32rpx;
  color:#999;
  text-align: left;
  padding-left: 30rpx;
}
.item_list:first-child{
  margin-left: 30rpx;
}
