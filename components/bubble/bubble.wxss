/* components/bubble/bubble.wxss */
.bubble {
  position: relative;
  display: inline-block;
  width: 80px;
  height: 80px;
  border-radius: 100%;
  background-image: linear-gradient(45deg, #ff9a9e 0%, #fad0c4 99%, #fad0c4 100%);
  text-align: center;
}
.bubble .playBtn {
  position: relative;
  display: inline-block;
  margin-top: 25px;
  width: 30px;
  height: 30px;
  z-index: 2;
}
.bubble .duration {
  font-size: 12px;
  color: white;
}
.bubble .process .circle {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  position: absolute;
  top: 0;
  box-sizing: border-box;
  border: 2px solid transparent;
  transform: rotate(-135deg);
}
.bubble .process .left,
.bubble .process .right {
  width: 40px;
  height: 80px;
  position: absolute;
  top: 0;
  overflow: hidden;
}
.bubble .process .left {
  left: 0;
}
.bubble .process .left .circle {
  left: 0;
  border-bottom: 2px solid green;
  border-left: 2px solid green;
}
.bubble .process .right {
  right: 0;
}
.bubble .process .right .circle {
  right: 0;
  border-top: 2px solid green;
  border-right: 2px solid green;
}
.bubble.small {
  width: 60px;
  height: 60px;
}
.bubble.small .playBtn {
  margin-top: 20px;
  width: 20px;
  height: 20px;
}
.bubble.small .process .circle {
  width: 60px;
  height: 60px;
}
.bubble.small .process .left,
.bubble.small .process .right {
  width: 30px;
  height: 60px;
}
.bubble.large {
  width: 100px;
  height: 100px;
}
.bubble.large .playBtn {
  margin-top: 25px;
  width: 50px;
  height: 50px;
}
.bubble.large .process .circle {
  width: 100px;
  height: 100px;
}
.bubble.large .process .left,
.bubble.large .process .right {
  width: 50px;
  height: 100px;
}
