.videoWrapper{
  width: 750rpx;
  height: 422rpx;
  position: relative;
}
video {
  width: 100%;
  height: 422rpx;
  position: relative;
}
video .mask{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
}
video .loadingMaster{
  width: 62rpx;
  height: 62rpx;
  animation: rotate 1s linear infinite ;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -31rpx;
  margin-top: -31rpx;
}
video .loading{
  width: 62rpx;
  height: 62rpx;
  position: absolute;
  left: 0;
  top: 0;
}

video .control {
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 88rpx;
  padding: 22rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  display: flex;
  z-index: -2;
  transition: all .3s;
  -webkit-transition: all .3s;
  -moz-transition: all .3s;
  -o-transition: all .3s;
}
.play-btn {
  width: 88rpx;
  height: 88rpx;
  position: absolute;
  top:50%;
  left:50%;
  border-radius: 5px;
  -webkit-transform: translate(-50%,-50%);
  -moz-transform: translate(-50%,-50%);
  transform:translate(-50%,-50%);
}
.loading-btn {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top:50%;
  left:50%;
  border-radius: 5px;
  -webkit-transform: translate(-50%,-50%);
  -moz-transform: translate(-50%,-50%);
  transform:translate(-50%,-50%);
}
.play-btn-full{
  width: 88rpx;
  height: 88rpx;
  position: fixed;
  top:50%;
  left:50%;
  border-radius: 5px;
  -webkit-transform: translate(-50%,-50%);
  -moz-transform: translate(-50%,-50%);
  transform:translate(-50%,-50%);
}
.loading-btn-full{
  width: 44rpx;
  height: 44rpx;
  position: fixed;
  top:50%;
  left:50%;
  border-radius: 5px;
  -webkit-transform: translate(-50%,-50%);
  -moz-transform: translate(-50%,-50%);
  transform:translate(-50%,-50%);
}
video .control .progress {
  position: relative;
  width: 366rpx;
  height: 44rpx;
  margin-left: 32rpx;
}
video .control .progress .progress-bg {
  width: 100%;
  height: 6rpx;
  position: absolute;
  top: 18rpx;
  background-color: #a6a09e;
  z-index: -1;
}
video .control .progress .progress-bar {
  height: 6rpx;
  background-color: #f86442;
  display: inline-block;
  position: absolute;
  top: 18rpx;
}
video .control .progress .progress-pointer {
  width: 24rpx;
  height: 24rpx;
  border-radius: 100%;
  position: absolute;
  background-color: #fff;
  display: inline-block;
  top: 9rpx;
}
video .control .progress .progress-pointer-b {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  background-color: transparent;
  display: inline-block;
  top: -9rpx;
}
video .control .time {
  margin-left: 36rpx;
  color: #fff;
  font-size: 26rpx;
  line-height: 40rpx;
}
video .control .full-screen-btn {
  position: absolute;
  width: 44rpx;
  height: 44rpx;
  right: 22rpx;
}

@-webkit-keyframes rotate {
  from {
    -webkit-transform: rotate(0deg);
  } 
  to {
    -webkit-transform: rotate(360deg);
  }
}

